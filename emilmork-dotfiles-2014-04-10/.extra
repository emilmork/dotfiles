#functions

function git_clone {
  URL=$1
  DATE=`date +%Y-%m-%d`
  mkdir -p /Volumes/Macintosh\ HD/dev/github/
  cd /Volumes/Macintosh\ HD/dev/github/
  REPO=`echo $URL | awk '{ split($0, url, "/"); print url[4] "-" url[5] }'`
  FOLDER=`echo "$REPO-$DATE" | sed -E "s/[ :]/-/g"`
  git clone $URL".git" $FOLDER
  cd $FOLDER
  sl .
}

function git_create {
 URL=$1
 mkdir -p /Volumes/Macintosh\ HD/dev/github/$1
 cd /Volumes/Macintosh\ HD/dev/github/$1
 touch README.md
 git init
 git add README.md
 git commit -m "first commit"
 git remote add origin git@github.com:emilmork/$URL".git"
}

#git

function gpo {
	git push origin $1
}

function gp {
	git pull origin $1
}

function rb {
	git pull --rebase origin $1
}